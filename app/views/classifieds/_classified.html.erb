<%= div_for classified, class: "item" do %>
	<%= link_to (image_tag classified.image, class: 'image'), classified_path(classified) %>
	<div class="description">
		<div class="title"><%= link_to classified.title, classified_path(classified) %></div>
		<div class="price">Rs <%= classified.price %></div>
	</div>
	<hr class="hr-dashed"></hr>
	<div class="footer">
		<span class="college"><%= classified.college.abbr %>, <%= classified.college.city %></span>
	</div>
<% end %>