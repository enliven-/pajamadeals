
<div class="row wrapper wrapper-content animated fadeInRight">
  <div class="row col-sm-12 ?animated ?fadeInRight" style="margin-left: 10px; margin-right: 10px;">

    <div class="col-sm-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Filters</h5>
          <!-- <span><button class="btn btn-sm btn-default">Clear</button></span> -->
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
<!-- 
          <div class="applied-filters">
            <div class="college"></div>
            <div class="category"></div>
          </div>
 -->          
          <div class="filter-choice colleges">
            <h4>College</h4>
            <%= select_tag :college, options_from_collection_for_select(College.all, "id", "name"), class: "form-control college required", prompt: "-- All --" %>
          </div>

          <div class="filter-choice categories">
            <h4>Category</h4>
            <div class="category">
              <%= link_to "All", classifieds_path, { class: "", id: 0 } %>
              <span class="pull-right"></span>
            </div>
            <% for category in Category.all %>
            <div class="category">
              <%= link_to category.name, classifieds_path, { class: "", id: category.id } %>
              <span class="pull-right"></span>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


    <div class="col-sm-9 results ?col-sm-offset-3">
      <% if @classifieds.empty? %>
        <%= render 'shared/no_results' %>
      <% else %>
        <% for classified in @classifieds %>
          <div class="result-parent">
            <%= render classified %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-sm-9 col-sm-offset-3">
      <%= will_paginate @classifieds %>
    </div>

  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {

  var li, ci;

  $("body").on("click", "h4.title", function(e) {
    e.preventDefault();
    var $result = $(this).parent().parent();
    var $siblings = $("div.result");

    $.each($siblings, function(i, el) {
      $("div.full", el).addClass("hidden");
      $("div.s-email", el).addClass("hidden");
      $("div.truncated", el).removeClass("hidden");
      $("div.s-info", el).css("min-height", "60px");
      $("div.options a", $(el).parent()).addClass("hidden");

    });

    $result.find("div.s-info").css("min-height", "75px");
    $("div.truncated", $result).addClass("hidden");
    $("div.full", $result).removeClass("hidden");
    $("div.s-email", $result).removeClass("hidden");
    $("div.options a", $result.parent()).removeClass("hidden");


    ci = $siblings.index($result);
    console.log(ci);
    console.log(li);
    li = ci;
    return false;
  });

  // $("body").on("mouseenter", "div.result-parent", function(e) {
  //   var $parent = $(this);
  //   $parent.find("div.options a").removeClass("hidden")
  // });


  // $("body").on("mouseleave", "div.result-parent", function(e) {
  //   var $parent = $(this);
  //   $parent.find("div.options a").addClass("hidden")
  // });

  $(document).ready(function() {
    $("body").on("change", ".filter-choice.colleges select", function(e) {
      var filter_college_choice = $(this).val();
      if (filter_college_choice.length > 0) {
        params = { filters : { college_id : filter_college_choice } };
      } else {
        params = { filters : { college_id : "0" } };
      }
      filter_results(params);
      // var filter = $(this).find(":selected").text();
      // $("div.applied-filters .college").html("<span class='label'>" + filter + "</span>")
    });

    // var $check = "<i class='fa fa-check'></i>";
    // var $cross = "<i class='fa fa-times'></i>";

    $("body").on("click", "div.filter-choice .category a", function(e) {
      e.preventDefault();
      var choice_id = $(this).attr("id");
      params = { filters : { category_id : choice_id } };
      filter_results(params);
      $(this).parent().siblings().css("background-color", "white");
      $(this).parent().css("background-color", "#D1DADE");
    });
  });


  var filter_results = function(params) {
    $.get("/classifieds/", params, function(data) {
      var results = $("div.results", data).html();
      window.history.pushState({}, {}, "/classifieds");
      $("div.results").html(results);
    });
  };


});

</script>

