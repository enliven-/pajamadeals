
<div class="row wrapper wrapper-content animated fadeInRight">
  <div class="row col-sm-12 ?animated ?fadeInRight" style="margin-left: 10px; margin-right: 10px;">

    <% for classified in @classifieds %>
        <%= render classified %>
    <% end %>
    <%= will_paginate @classifieds %>

  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {

  var $last;
  var last_index;
  var current_index;
  var $siblings = $("div.result");

  $("body").on("click", "h4.title", function(e) {
    e.preventDefault();
    var $result = $(this).parent().parent();

    $.each($siblings, function(e) {
      $("div.full", e).addClass("hidden");
      $("div.s-email", e).addClass("hidden");
      $("div.truncated", e).removeClass("hidden");

    });

    $("div.truncated", $result).toggleClass("hidden");
    $("div.full", $result).toggleClass("hidden");
    $("div.s-email", $result).toggleClass("hidden");
    return false;
  });

});

</script>

