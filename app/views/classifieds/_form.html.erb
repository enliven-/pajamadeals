<%= form_for @classified do |f| %>
<%= f.text_field :condition %>

<!-- Books field -->
<%= f.fields_for :book do |b| %>
<%= b.text_field :title %>
<% end %>

  <%= f.fields_for :user do |u| %>
  <%= u.text_field :email %>
  <% end %>

   <%= f.fields_for :images do |image| %>
	   <%= image.label 'Image' %>
	   <%= image.file_field :file, multiple: true, name: 'images[file][]' %>
   <% end %>

<%= f.submit %>
<% end %>
