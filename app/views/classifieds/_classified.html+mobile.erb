<%= div_for classified, class: "box" do %>
	<div class="pull-right"></div>
	<div class="title"><%= link_to classified.title, classified_path(classified) %></div>
	<div class="price pull-right"><%= render_price classified.price %></div>
	<div class="mobile"><a href="tel:<%= render_mobile_number classified.user.mobile %>"><%= i('phone') %> <%= render_mobile_number classified.user.mobile %></a></div>
	<div class="date pull-right" style="color: lightgrey; margin-top: -2px"><em><%= render_date classified.created_at %></em></div>		
	
	<div class="college" style="margin-top:-2px">
		<%= i('map-marker') %><%= classified.college.abbr_with_city %>
	</div>
<% end %>