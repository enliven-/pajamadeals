<%= div_for classified, class: "box" do %>
	<div class="price pull-right"><%= render_price classified.price if classified.sell? %></div>
	<div class="title"><%= link_to classified.title, classified_path(classified) %></div>
	<div class="mobile">+91-<%= classified.user.mobile %></div>
	<div>
		<span class="type"><%= classified.sell? ? 'for sale' : 'needed' %></span>&nbsp;&middot;&nbsp;
		<span class="date">Posted on <%= render_date classified.created_at %></span>
		
	</div>
<% end %>