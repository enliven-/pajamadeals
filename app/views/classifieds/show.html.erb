
<div class="row wrapper">

  <div class="row col-sm-12 animated fadeInRight" style="margin-left: 10px; margin-right: 10px;">

    <div class="col-sm-4 classified-main-info">

      <div class="ibox float-e-margins">

        <div class="ibox-title">
          <!-- <h5><%= @classified.title %></h5> -->
          <h5><%= @classified.title %></h5>
          <span class="posted-at pull-right"><em><%= render_date @classified.created_at %></em></span>
        </div>
      
        <div>
          
          <div class="ibox-content ?no-padding ?border-left-right">
            <%= image_tag @classified.image.show, class: 'img-responsive classified-image' %>
          </div>

          <div class="ibox-content profile-content" >

            <div class="location" style="margin-left: 34%; margin-top: -2%;">
              <h4><i class="fa fa-map-marker"></i> <%= @classified.college.name %></h4>
            </div>
            <div class="prices" style="margin-left: 34%" >
              <h3 class="selling-price"><strong>Rs. <%= @classified.expected_price %>  </strong></h3>
              <span class="precent-off">(<%= @classified.percent_off %>% off)</span>              
              <br />
              <span class="retail-price">Rs. <%= @classified.retail_price %></span>   
            </div>

            <div class="user-button" style=" margin-top: 5%;">
              <div class="row">

                <div class="col-sm-6">
                  <button type="button" class="btn btn-success btn-sm btn-block" data-toggle="modal" data-target="#cs-modal">
                    <i class="fa fa-user"></i> Contact Seller 
                  </button>
                </div>
                <div class="col-sm-6">
                  <button type="button" class="btn btn-primary btn-sm btn-block" data-toggle="modal" data-target="#hi-modal">
                    <i class="fa fa-bookmark"></i> Booth Pickup 
                  </button>
                </div>
<!--                 <div class="col-sm-4">
                  <button type="button" class="btn btn-success btn-sm btn-block" data-toggle="modal" data-target="#pu-modal">
                  <i class="fa fa-truck"></i> Deliver to Me </button>
                </div> -->
              </div>
            </div>

          </div>
        </div>
      </div>

      <div class="ibox float-e-margins seller">
        <div class="ibox-title">
          <h5>Seller</h5>
        </div>
        <div>
          <div class="ibox-content no-padding border-left-right">
            <div class="widget-head-color-box lazur-bg p-lg text-center">
              <div class="m-b-md">
                <h2 class="font-bold no-margins">
                  <%= @classified.user.name %>
                </h2>
              </div>
              <%= image_tag @classified.user.avatar.index, class: "img-circle circle-border m-b-md", alt: "profile" %>
              <div>
                <span><%= pluralize @classified.user.classifieds.count, 'Item' %> listed</span> |
                <span><%= pluralize @classified.user.classifieds.sold.count, 'Item' %> sold</span>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>


    <div class="col-sm-8 classified-related-info">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Related Info</h5>
        </div>
        <div class="ibox-content">
          <div>

            <div class="feed-activity-list">

              <div class="feed-element">

                <div class="media-body">

                  <div class="row">

                    <div class="col-sm-6">
                      <div class="col-sm-12" style="padding-left: 0px;">
                        <span class="fe-sub-heading"><strong>Product Details</strong></span>

                        <table class="table classified-table">
                          <tbody>
                            <tr>
                              <td><span class="field">Publisher</span></td>
                              <td><%= @classified.publisher || '-' %></td>
                            </tr>
                            <tr>
                              <td><span class="field">Author</span></td>
                              <td><%= @classified.author || '-' %></td>
                            </tr>
                            <tr>
                              <td><span class="field">Edition</span></td>
                              <td><%= @classified.edition || '-' %></td>
                            </tr> 
                            <tr>
                              <td><span class="field">ISBN</span></td>
                              <td><%= @classified.isbn || '-' %></td>
                            </tr> 
                              <tr>
                                <td><span class="field">Pages</span></td>
                                <td><%= @classified.pages || '-' %></td>
                              </tr>  
                              <tr>
                                <td><span class="field">Year</span></td>
                                <td><%= @classified.released_year || '-' %></td>
                              </tr>  
                              <tr>
                                <td><span class="field">Condition</span></td>
                                <td><%= @classified.condition.capitalize || '-' %></td>
                              </tr>  
                          </tbody>
                        </table>
                      </div>                            
                    </div>
                    <div class="col-sm-6">
                      <div class="row col-sm-12">
                        <span class="fe-sub-heading"><strong> Description </strong></span>
                        <p><%= @classified.description ||  'Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                                            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                                                            quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                                            consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
                                                            cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
                                                            proident, sunt in culpa qui officia deserunt mollit anim id est laborum.' %></p>
                      </div>                            
                    </div>
                  </div>
                </div>
              </div>


              <div class="feed-element">
                <div class="media-body ">
                  <div class="row">
                    
                    <div class="col-sm-6">
                      <div class="col-sm-12" style="padding-left: 0px;">
                        <span class="fe-sub-heading"><strong> Photos by Seller</strong></span>                      
                        <div class="photos">
                        <% for image in @classified.images %>
                            <%= image_tag image.file.s135x180 %>
                        <% end %>
                        </div>
                      </div>
                    </div>

                    <div class="col-sm-6">
                      <div class="row col-sm-12">
                        <span class="fe-sub-heading"><strong> Seller Comments </strong></span>
                        <p><%= @classified.comment %></p>
                      </div>                            
                    </div>
                  </div>

                </div>
              </div>
            
              <div class="feed-element">
                <div class="media-body">
                  <div class="row">
                    <div class="col-sm-12">
                      <span class="fe-sub-heading"><strong> Other Choices </strong></span>
                      <table class="table table-bordered other-choices">
                        <thead>
                          <tr>
                            <th>Seller</th>
                            <th>Price</th>
                            <th>Delivery</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><a href="">Flipkart</a></td>
                            <td>Rs 300</td>
                            <td>3-5 Days</td>

                          </tr>
                          <tr>
                            <td><a href="">Amazon</a></td>
                            <td>Rs 330</td>
                            <td>2-3 Days</td>

                          </tr>
                          <tr>
                            <td><a href="">SnapDeal</a></td>
                            <td>Rs 350</td>
                            <td>5-6 Days</td>

                          </tr>                            
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>


           </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="cs-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Contact Seller</h4>
        You can use the seller info provider here to contact him/her directly or fill in your details and submit this form. Tell them you found the listing on hasstuff when you call them.
      </div>
      <div class="modal-body">

        <h3 style="text-align: center; margin-top: 0px; padding-top: 0px;"> <%= @classified.user.full_name %></h3> 

        <div class="row col-sm-4 col-sm-offset-4" style="text-align: center; margin-top: 0px; padding-top: 0px;">
          <h4 style="margin-top: 0px; padding-top: 0px;">
            <i class="fa fa-phone">
              <span style="margin-left: 4px;"><%= @classified.user.phone || '-'%></span>
            </i>
          </h4>
        </div>

        <div class="row col-sm-8 col-sm-offset-2" style="text-align: center; margin-top: 0px; padding-top: 0px; margin-bottom: 10px;">
          <h4 style="margin-top: 0px; padding-top: 0px;">
            <i class="fa fa-envelope">
              <span style="margin-left: 4px;"><%= @classified.user.email %></span>
            </i>
          </h4>        
        </div>

        <br/>
    		<%= form_for ContactSeller.new, url: contact_seller_classified_path(@classified), :html => {:class => 'form-horizontal listing-form' }, method: :post do |f| %>
    			<div class="form-group">
    				<%= f.label :full_name, class: 'col-sm-3 control-label' %>
    				<div class="col-sm-8">
    					<%= f.text_field :name, class: 'form-control publisher', value: current_user.try(:name) %>
    				</div>
    			</div>
    			
    			<div class="form-group">
    				<%= f.label :mobile, class: 'col-sm-3 control-label' %>
    				<div class="col-sm-8">
    					<%= f.text_field :phone, class: "form-control publisher", value: current_user.try(:phone) %>
    				</div>
    			</div>
    			
    			<div class="form-group">
    				<%= f.label :email, class: 'col-sm-3 control-label' %>
    				<div class="col-sm-8">
    					<%= f.text_field :email, class: "form-control publisher", value: current_user.try(:email) %>
    				</div>
    			</div>
    			
    			<div class="form-group">
    				<%= f.label :message, class: 'col-sm-3 control-label' %>
    				<div class="col-sm-8">
    					<%= f.text_area :message, class: 'form-control publisher' %>
    				</div>
    			</div>
    			<div class="modal-footer">
    	  		  <%= button_tag 'Cancel', class: 'btn btn-default', data: {dismiss: 'modal'} %>
    	  		  <%= f.button 'Submit', class: 'btn btn-primary' %>
    		  </div>
    		<% end %>
      </div>
    </div>
  </div>
</div>





