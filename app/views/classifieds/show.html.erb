<div class="modal fade" id="hi-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Booth Pickup</h4>
        You can pick up this book at the booth in your college. We'll hold this book for you for 2 days.
      </div>
      <div class="modal-body">
      <%= form_for Pick.new, url: booth_pickup_classified_path(@classified), :html => {:class => 'form-horizontal listing-form' }, method: :post do |f| %> 

        <div class="form-group">
          <%= f.label :name, class: 'col-sm-3 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field :name, class: 'form-control name', value: current_user.try(:name) %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :phone, class: 'col-sm-3 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field :phone, class: 'form-control phone', value: current_user.try(:phone) %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'College', class: 'col-sm-3 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field :college, class: 'form-control college', value: current_user.try(:college).try(:name) %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :message, class: 'col-sm-3 control-label' %>
          <div class="col-sm-8">
            <%= f.text_area :message, class: 'form-control message' %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <div class="form-group">
          <%= button_tag 'Cancel', class: 'btn btn-default', data: {dismiss: 'modal'} %>
          <%= f.button 'Submit', class: 'btn btn-primary' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="pu-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
