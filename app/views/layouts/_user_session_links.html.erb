<% if user_signed_in? %>
	<div class="btn-group">
		<div class="btn-group">
		  <%= link_to current_user.name, current_user.email, class: 'dropdown-toggle navbar-text', data: { toggle: 'dropdown' } %>
		  <ul class="dropdown-menu" role="menu">
			<li><%= link_to 'Items you can sell', '#', class: 'disabled' %><li>
			<li class="divider"></li>
		    <li><%= link_to 'Sell listings', classifieds_path(filters: { user: true, listing_type: :sell }) %></li>
		    <li><%= link_to 'Buy listings', classifieds_path(filters: { user: true, listing_type: :buy })%></li>
		    <li class="divider"></li>
		    <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
			<li><%= link_to 'Sign out', signout_path, method: :delete %></li>
		  </ul>
		</div>
	</div>
<% else %>
	<%= link_to 'Sign in with Facebook', "/auth/facebook", class: 'btn btn-default navbar-btn btn-sm fb-sign-in' %>
<% end %>