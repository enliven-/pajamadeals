<% if user_signed_in? %>
	<div class="btn-group">
		<div class="btn-group">
		  <%= link_to current_user.name, current_user.email, class: 'dropdown-toggle navbar-text', data: { toggle: 'dropdown' } %>
		  <ul class="dropdown-menu" role="menu">
			<!-- <li><%= link_to 'Items you can sell', '#', class: 'disabled' %><li>
			<li class="divider"></li> -->
		    <li><%= link_to 'Sell listings', classifieds_path(filters: { user: true, listing_type: :sell }) %></li>
		    <li><%= link_to 'Want listings', classifieds_path(filters: { user: true, listing_type: :buy })%></li>
		    <li class="divider"></li>
		    <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
			<li><%= link_to 'Sign out', signout_path, method: :delete %></li>
			<% if !current_user.user? %>
				<li class="divider"></li>
				<li><%= link_to 'Dashboard', admin_dashboard_path if current_user.admin? %></li>
				<li><%= link_to 'Stats', stats_path %></li>
			<% end %>		
		  </ul>
		</div>
	</div>
<% else %>
	<%= button_to 'Sign in with Facebook', "/auth/facebook", class: 'btn btn-primary navbar-btn btn-sm fb-sign-in' %>
<% end %>