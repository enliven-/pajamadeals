<% if user_signed_in? %>
	<div class="btn-group">
		<div class="btn-group">
		  <%= link_to current_user.name, '#', class: 'dropdown-toggle navbar-text', data: { toggle: 'dropdown' } %>
		  <ul class="dropdown-menu" role="menu">
			<li><%= link_to 'Items you can sell', '#' %><li>
			<li class="divider"></li>
		    <li><%= link_to 'Listings', classifieds_path(user: true) %></li>
		    <li><%= link_to 'Wishlist', classifieds_path(user: true, wishlist: true)%></li>
		    <li class="divider"></li>
		    <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
		  </ul>
		</div>
	</div>
<% else %>
	<%= link_to 'Sign in with Facebook', "/auth/facebook", class: 'btn btn-default btn-embossed navbar-btn btn-sm fb-sign-in' %>
<% end %>