

<div class="?modal ?fade" id="sign-in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="?true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign In</h4>
        Sign in for a better experience.
      </div>
      <div class="modal-body">

        <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-horizontal signup-form'} do |f| %>

        <div class="form-group">
          <%= f.label :email, class: 'col-sm-3 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field :email, class: "form-control email" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'col-sm-3 control-label' %>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control password" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="form-group">
          <%= button_tag 'Cancel', class: 'btn btn-default', data: {dismiss: 'modal'} %>
          <%= f.button :submit, "Sign in", class: 'btn btn-primary' %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>

