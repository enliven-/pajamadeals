        </div>      
        <div class="form-group">
          <%= button_tag 'Cancel', class: 'btn btn-default', data: {dismiss: 'modal'} %>
          <%= f.button "Sign in", class: 'btn btn-primary submit' %>
        </div>
      </div>
      <% end %>

    </div>
