

<div class="modal fade" id="sign-up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
        Create an account with us for a better experience.
      </div>
      <div class="modal-body">

        <%= form_for resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'form-horizontal sign-up-form'} do |f| %>

        <div class="form-group">
          <!-- <%= f.label 'Name', class: 'col-sm-3 control-label' %> -->
          <div class="col-sm-4 col-sm-offset-2">
            <%= f.text_field :fname, class: "form-control fname", placeholder: 'First Name' %>
          </div>
          <div class="col-sm-4 ">
            <%= f.text_field :lname, class: "form-control lname", placeholder: 'Last Name' %>
          </div>
        </div>

<!--         <div class="form-group">
          <%= f.label 'Last Name', class: 'col-sm-3 control-label' %>
          <div class="col-sm-8">
            <%= f.text_field :lname, class: "form-control fname", placeholder: 'First Name' %>
          </div>
        </div> -->

        <div class="form-group">
          <!-- <%= f.label 'Mobile', class: 'col-sm-3 control-label' %> -->
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.text_field :mobile_number, class: "form-control mobile_number", placeholder: 'Mobile' %>
          </div>
        </div>

        <div class="form-group">
          <!-- <%= f.label :email, class: 'col-sm-3 control-label' %> -->
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.text_field :email, class: "form-control email", placeholder: 'Email' %>
          </div>
        </div>

        <div class="form-group">
          <!-- <%= f.label :password, class: 'col-sm-3 control-label' %> -->
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.password_field :password, class: "form-control password", placeholder: 'Password' %>
          </div>
        </div>

        <div class="form-group">
          <!-- <%= f.label :college, class: 'col-sm-3 control-label' %> -->
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.text_field :college, class: "form-control college", placeholder: 'College' %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <div class="col-sm-5 pull">
          <%= render "devise/shared/links" %>          
        </div>
        <div class="form-group">
          <%= button_tag 'Cancel', class: 'btn btn-default cancel', data: {dismiss: 'modal'} %>
          <%= f.button :submit, class: 'btn btn-primary submit' %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>

<!-- <%= render "devise/shared/links" %> -->

