<div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Bit more info</h4>
      </div>
	   <%= form_for @user, html: { class: 'form-vertical' }, remote: true do |f| %>
	     <div class="modal-body">
	         <div class="form-group">
				  <%= f.label :mobile %>
				  <div class="input-group">
					  <span class="input-group-addon">+91</span>
		     		  <%= f.text_field :mobile, placeholder: 'Mobile no.', class: 'form-control' %>
				  </div>
	         </div>	
			 <div class="form-group">
				  <%= f.label :college_id, "Your college" %>
				   <div class="input-group">
					   <%= f.select :college_id, College.order(name: :asc).select(:id, :name).collect { |college| [college.name, college.id] }, {}, { class: 'inverse-dropdown-select' } %>
				   </div>
			 </div>  
	     </div>
	     <div class="modal-footer">
	       <%= f.submit "Create", class: 'btn btn-primary update-user' %>
	     </div>
	   <% end %>
   </div>
</div>